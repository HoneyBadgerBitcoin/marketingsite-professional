---
import { Shield, Zap, DollarSign, Smartphone } from 'lucide-react';
---

<section class="py-20">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl text-gray-900 mb-4">
        Everything you need to trade crypto
      </h2>
      <p class="text-xl text-gray-600">Simple, secure, and built for Canadians</p>
    </div>

    <!-- Big feature cards grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
      
      <!-- Low fees card - Purple gradient -->
      <div class="card-gradient bg-gradient-primary p-10 rounded-3xl">
        <div class="bg-white/20 backdrop-blur-sm inline-flex p-4 rounded-2xl mb-6">
          <DollarSign class="h-8 w-8 text-white" />
        </div>
        <h3 class="text-3xl text-white mb-4">
          Low and transparent<br/>fees on every trade.
        </h3>
        <p class="text-white/80 text-lg mb-6">
          Trade with confidence. We offer the most competitive rates in Canada.
        </p>
        <button class="bg-white text-primary-600 px-6 py-3 rounded-xl font-semibold hover:bg-white/90 transition-all">
          View Pricing →
        </button>
      </div>

      <!-- Fast & secure card - Cyan gradient -->
      <div class="card-gradient bg-gradient-accent p-10 rounded-3xl">
        <div class="bg-white/20 backdrop-blur-sm inline-flex p-4 rounded-2xl mb-6">
          <Zap class="h-8 w-8 text-white" />
        </div>
        <h3 class="text-3xl text-white mb-4">
          Get started in<br/>under 5 minutes.
        </h3>
        <p class="text-white/80 text-lg mb-6">
          Quick verification, instant deposits. Start trading crypto in no time.
        </p>
        <button class="bg-white text-accent-600 px-6 py-3 rounded-xl font-semibold hover:bg-white/90 transition-all">
          Create Account →
        </button>
      </div>

      <!-- Mobile app card - Yellow/Orange gradient -->
      <div class="card-gradient bg-gradient-warning p-10 rounded-3xl">
        <div class="bg-white/20 backdrop-blur-sm inline-flex p-4 rounded-2xl mb-6">
          <Smartphone class="h-8 w-8 text-white" />
        </div>
        <h3 class="text-3xl text-white mb-4">
          Trade on the go<br/>with our mobile app.
        </h3>
        <p class="text-white/80 text-lg mb-6">
          Available on iOS and Android. Trade anywhere, anytime.
        </p>
        <div class="flex gap-3">
          <button class="bg-black text-white px-4 py-2 rounded-lg font-medium hover:bg-black/80 transition-all flex items-center gap-2">
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"/>
            </svg>
            App Store
          </button>
          <button class="bg-black text-white px-4 py-2 rounded-lg font-medium hover:bg-black/80 transition-all flex items-center gap-2">
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M3 20.5v-17c0-.59.34-1.11.84-1.35l13.69 8.5c.65.4.65 1.29 0 1.69l-13.69 8.5c-.5.25-.84-.07-.84-.34z"/>
            </svg>
            Google Play
          </button>
        </div>
      </div>

      <!-- Security card - Green gradient -->
      <div class="card-gradient bg-gradient-success p-10 rounded-3xl">
        <div class="bg-white/20 backdrop-blur-sm inline-flex p-4 rounded-2xl mb-6">
          <Shield class="h-8 w-8 text-white" />
        </div>
        <h3 class="text-3xl text-white mb-4">
          Bank-level security<br/>you can trust.
        </h3>
        <p class="text-white/80 text-lg mb-6">
          Your funds are protected with industry-leading security measures.
        </p>
        <button class="bg-white text-success-600 px-6 py-3 rounded-xl font-semibold hover:bg-white/90 transition-all">
          Learn More →
        </button>
      </div>
    </div>

    <!-- Additional features row -->
    <div class="mt-12 grid md:grid-cols-3 gap-6 max-w-6xl mx-auto">
      <div class="bg-purple-50 p-8 rounded-2xl">
        <h4 class="text-xl text-gray-900 mb-2">220+ ATM Locations</h4>
        <p class="text-gray-600">Buy and sell crypto with cash at locations across Canada</p>
      </div>
      <div class="bg-blue-50 p-8 rounded-2xl">
        <h4 class="text-xl text-gray-900 mb-2">70+ Cryptocurrencies</h4>
        <p class="text-gray-600">Trade Bitcoin, Ethereum, and dozens of other digital assets</p>
      </div>
      <div class="bg-green-50 p-8 rounded-2xl">
        <h4 class="text-xl text-gray-900 mb-2">24/7 Support</h4>
        <p class="text-gray-600">Get help whenever you need it from our Canadian support team</p>
      </div>
    </div>
  </div>
</section>
