---
import { ArrowRight } from 'lucide-react';
---

<section class="py-20">
  <div class="container-custom">
    <div class="bg-accent-600 rounded-2xl p-12 md:p-16 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-5xl text-white mt-4 mb-6">
          Cash In on Crypto Today
        </h2>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="px-8 py-4 bg-white text-accent-700 rounded-lg hover:bg-gray-50 transition-all duration-300 font-semibold shadow-lg flex items-center justify-center">
            Buy Crypto
            <ArrowRight className="ml-2 h-5 w-5" />
          </button>
          <button class="px-8 py-4 bg-accent-800 text-white rounded-lg hover:bg-accent-900 transition-all duration-300 font-semibold shadow-lg">
            Find ATM
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
