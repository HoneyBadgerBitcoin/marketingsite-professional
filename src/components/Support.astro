---
import VideoPlayer from "./VideoPlayer.astro";
---

<section class="py-20">
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Content -->
      <div>
        <h2 class="text-5xl text-gray-900 mb-6">
          Get real human support
        </h2>
        <p class="text-lg text-gray-600 mb-8">
          Quickly find the answers you need in our 
          <a href="#support-center" class="text-accent-600 hover:text-accent-700 font-semibold underline">support centre</a>,
          or contact a member of our team 24/7/365, and we'll be happy to assist you.
        </p>
        <button class="px-8 py-4 bg-accent-600 text-white rounded-lg hover:bg-accent-700 hover:shadow-lg transition-all duration-300 font-semibold">
          Contact support team
        </button>
      </div>

      <!-- Illustration -->
      <div class="relative flex items-center justify-center">
        <VideoPlayer 
          src="/security-lock.webm" 
          alt="HoneyBadger security and support animated video" 
          class="w-full max-w-md"
        />
      </div>
    </div>
  </div>
</section>
