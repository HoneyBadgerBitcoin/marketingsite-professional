---
import VideoPlayer from "./VideoPlayer.astro";
// Hero component - no server-side logic needed
---

<section class="relative pt-40 pb-20 md:pt-48 md:pb-28 lg:pt-56 lg:pb-32 overflow-hidden min-h-screen flex items-center" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);">
  <!-- Background pattern overlay -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="
      background-image: url(\"data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23000000' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E\");
    "></div>
  </div>
  
  <!-- Gradient accents -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-0 w-96 h-96 bg-blue-500/10 filter blur-[150px] -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-purple-500/10 filter blur-[150px] translate-x-1/2 translate-y-1/2"></div>
  </div>
  
  <div class="container-custom relative">
    <div class="grid lg:grid-cols-2 gap-8 items-center">
      <!-- Left Content -->
      <div class="relative z-20 lg:pr-8">
        <h1 class="text-4xl md:text-5xl lg:text-[5rem] font-normal tracking-tight text-gray-900 mb-8 leading-tight text-left hero-title">
          Buy Bitcoin in <span class="bg-gradient-to-r from-[#024eb3] via-[#7fa1ff] to-[#024eb3] bg-clip-text text-transparent font-medium">Minutes</span>, Not Hours
        </h1>
        <p class="text-lg md:text-xl text-gray-600 mb-12 max-w-2xl leading-relaxed text-left hero-description">
          Canada's trusted platform for digital assets â€” simple, secure, and fast.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-start hero-buttons">
          <a href="#app" class="btn-pill-primary">
            Buy Online
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
          <a href="#find-atm" class="btn-pill-outline"><span>Find an ATM</span></a>
        </div>
      </div>
      
      <!-- Right Content - Coin Rain Video -->
      <div class="relative hidden lg:block hero-image">
        <!-- Coin rain video container with glow effect -->
        <div class="relative w-full h-[750px] flex items-center justify-center">
          <!-- Subtle glow halo behind video -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="absolute w-[600px] h-[400px] bg-gradient-to-r from-blue-500/5 via-purple-500/5 to-pink-500/5 blur-[120px] animate-pulse-slow"></div>
            <div class="absolute w-[500px] h-[320px] bg-gradient-to-r from-purple-600/8 to-blue-600/8 blur-[100px] animate-pulse-slower"></div>
          </div>
          
          <!-- Video element with enhanced glow -->
          <div class="relative video-glow-wrapper">
            <VideoPlayer 
              src="/cryptocurrency-mining-concept.webm" 
              alt="Cryptocurrency mining concept animated video" 
              class="w-full h-full relative z-10"
              style="filter: drop-shadow(0 0 30px rgba(147, 51, 234, 0.1)) drop-shadow(0 0 60px rgba(59, 130, 246, 0.08));"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Staggered fade-in animations for hero content */
  .hero-title {
    opacity: 0;
    animation: fadeInUp 1.2s ease-out 0.2s both;
  }
  
  .hero-description {
    opacity: 0;
    animation: fadeInUp 1.2s ease-out 0.8s both;
  }
  
  .hero-buttons {
    opacity: 0;
    animation: fadeInUp 1.2s ease-out 1.4s both;
  }
  
  .hero-image {
    opacity: 0;
    animation: slowFadeIn 2s ease-out 0.6s both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slowFadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }
  
  @keyframes float-delayed {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-15px); }
  }
  
  @keyframes bounce-subtle {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-5px); }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .animate-float-delayed {
    animation: float-delayed 6s ease-in-out infinite;
    animation-delay: 2s;
  }
  
  .animate-bounce-subtle {
    animation: bounce-subtle 2s ease-in-out infinite;
  }
  
  .bg-gradient-radial {
    background: radial-gradient(circle, var(--tw-gradient-from), var(--tw-gradient-to));
  }
  
  /* Glowing video effect */
  .video-glow-wrapper {
    position: relative;
  }
  
  .video-glow-wrapper::before {
    content: '';
    position: absolute;
    inset: -40px;
    background: linear-gradient(45deg, 
      rgba(147, 51, 234, 0.03) 0%, 
      rgba(59, 130, 246, 0.03) 50%, 
      rgba(147, 51, 234, 0.03) 100%);
    filter: blur(40px);
    border-radius: 0;
    z-index: -1;
    animation: glow-rotate 20s linear infinite;
  }
  
  @keyframes glow-rotate {
    0% { transform: rotate(0deg) scale(1); }
    50% { transform: rotate(180deg) scale(1.05); }
    100% { transform: rotate(360deg) scale(1); }
  }
  
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.7; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.05); }
  }
  
  @keyframes pulse-slower {
    0%, 100% { opacity: 0.6; transform: scale(1); }
    50% { opacity: 0.9; transform: scale(1.08); }
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 8s ease-in-out infinite;
  }
  
  .animate-pulse-slower {
    animation: pulse-slower 12s ease-in-out infinite;
  }
</style>
