---

<!-- Full-width Newsletter CTA Section -->
<section class="bg-gray-900 py-20 md:py-24 text-center relative overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute inset-0 opacity-10">
    <!-- Subtle pattern overlay -->
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, rgba(255,255,255,0.1) 1px, transparent 1px), radial-gradient(circle at 75% 75%, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
  </div>

  <!-- Content -->
  <div class="container-custom relative z-10">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-4xl md:text-5xl text-white font-bold mb-6">
        Join the HoneyBadger Insider
      </h2>
      
      <p class="text-lg md:text-xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed">
        Enjoy exclusive promotions, market updates, and educational bitcoin content in your inbox every week.
      </p>

      <!-- Email Signup Form -->
      <div class="max-w-2xl mx-auto">
        <form class="flex flex-col sm:flex-row gap-4 bg-white p-2">
          <div class="flex-1">
            <input 
              type="email" 
              placeholder="johndoe@gmail.com" 
              class="w-full px-6 py-4 text-gray-700 bg-transparent border-0 outline-none placeholder-gray-400 text-lg"
              required
            />
          </div>
          
          <button 
            type="submit"
            class="px-8 py-4 bg-accent-600 text-white hover:bg-accent-700 transition-all duration-300 font-semibold text-lg whitespace-nowrap"
          >
            Join now
          </button>
        </form>
      </div>

      <!-- Additional info -->
      <p class="text-sm text-gray-400 mt-6">
        No spam, unsubscribe anytime. We respect your privacy.
      </p>
    </div>
  </div>
</section>
