<section class="py-20">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-5xl text-gray-900 mb-6">
        Fast funding and withdrawals with Canadian funds
      </h2>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Interac e-Transfer -->
      <div class="bg-white rounded-2xl border border-gray-100/50 p-8 shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
        <div class="flex items-center justify-center w-16 h-16 bg-orange-100 rounded-xl mb-6 mx-auto">
          <!-- Interac logo placeholder - using a card icon for now -->
          <svg class="w-8 h-8 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
            <path d="M2 4a2 2 0 012-2h16a2 2 0 012 2v16a2 2 0 01-2 2H4a2 2 0 01-2-2V4zm2 0v16h16V4H4zm2 2h12v2H6V6zm0 4h8v2H6v-2zm0 4h10v2H6v-2z"/>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 text-center mb-3">
          Interac e-Transfer
        </h3>
        <p class="text-gray-600 text-center">
          Send and receive funds instantly using Canada's most trusted payment method
        </p>
      </div>

      <!-- Bank Wire -->
      <div class="bg-white rounded-2xl border border-gray-100/50 p-8 shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
        <div class="flex items-center justify-center w-16 h-16 bg-blue-100 rounded-xl mb-6 mx-auto">
          <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
            <path d="M3 6a1 1 0 011-1h16a1 1 0 011 1v12a1 1 0 01-1 1H4a1 1 0 01-1-1V6zm2 1v10h14V7H5zm2 2h10v2H7V9zm0 4h8v2H7v-2z"/>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 text-center mb-3">
          Bank Wire
        </h3>
        <p class="text-gray-600 text-center">
          Secure direct bank transfers for larger transactions with competitive rates
        </p>
      </div>
    </div>
  </div>
</section>
