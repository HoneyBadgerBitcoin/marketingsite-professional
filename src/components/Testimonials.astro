---

<section class="py-20">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-5xl text-gray-900 mb-4">
        Love from our users
      </h2>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {testimonials.map((testimonial) => (
        <div class="bg-white p-6 shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100">
          <!-- Review Text -->
          <p class="text-gray-700 text-sm leading-relaxed mb-6 line-clamp-4">
            {testimonial.text}
          </p>
          
          <!-- Author Info -->
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <img 
                src={testimonial.avatar}
                alt={testimonial.author}
                class="w-10 h-10"
              />
              <div>
                <p class="font-semibold text-gray-900 text-sm">{testimonial.author}</p>
                <p class="text-gray-500 text-xs">{testimonial.source}</p>
              </div>
            </div>
            
            <!-- Source Icon -->
            <div class="flex-shrink-0" set:html={getSourceIcon(testimonial.sourceIcon)} />
          </div>
        </div>
      ))}
    </div>

    <!-- See All Button -->
    <div class="text-center">
      <button class="text-accent-600 hover:text-accent-700 font-semibold text-sm transition-colors duration-200 underline decoration-2 underline-offset-4">
        See all
      </button>
    </div>
  </div>
</section>

<style>
  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
