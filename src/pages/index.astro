---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.tsx';
import Hero from '../components/Hero.astro';
import Testimonials from '../components/Testimonials.astro';
import TabServices from '../components/TabServices.tsx';
import Stats from '../components/Stats.tsx';
import Support from '../components/Support.astro';
import Insights from '../components/Insights.astro';
import NewsletterCTA from '../components/NewsletterCTA.astro';
import FAQ from '../components/FAQ.tsx';
import CTA from '../components/FinalCTA.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="HoneyBadger - Buy and Sell Crypto with Cash">
  <div class="min-h-screen bg-white">
    <Header client:load />
    <main>
    <Hero />
      <!-- Stats Section - Soft sand/beige pastel -->
      <section class="section-sand section-padding-sm">
        <Stats client:load />
      </section>
      
      <!-- Services Section - Clean white background -->
      <section class="bg-white">
        <TabServices client:load />
      </section>
      
      <!-- Support Section - Soft blue pastel -->
      <section class="section-blue section-padding">
        <Support />
      </section>
      
      <!-- Testimonials Section - Light purple pastel -->
      <section class="section-purple section-padding">
        <Testimonials />
      </section>
      
      <!-- Insights & Newsletter - Light mint pastel -->
      <section class="section-mint section-padding">
        <Insights />
        <NewsletterCTA />
      </section>
      
      <!-- FAQ & CTA - Clean neutral -->
      <section class="section-neutral section-padding">
        <FAQ client:load />
        <CTA />
      </section>
    </main>
    <Footer />
  </div>
</BaseLayout>
