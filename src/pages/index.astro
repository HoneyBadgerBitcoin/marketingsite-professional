---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.tsx';
import Hero from '../components/Hero.astro';
import ATMShowcase from '../components/ATMShowcase.astro';
import Testimonials from '../components/Testimonials.astro';
import TabServices from '../components/TabServices.tsx';
import Stats from '../components/Stats.tsx';
import Support from '../components/Support.astro';
import Insights from '../components/Insights.astro';
import NewsletterCTA from '../components/NewsletterCTA.astro';
import FAQ from '../components/FAQ.tsx';
import CTA from '../components/FinalCTA.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="HoneyBadger - Buy and Sell Crypto with Cash">
  <div class="min-h-screen bg-white">
    <Header client:load />
    <main>
    <Hero />
      <!-- Warm moving background wrapper with seamless edges -->
      <div class="relative" style="background: linear-gradient(to bottom, white 0%, #fdfcfb 15%, #f9f4ee 50%, #fdfcfb 85%, white 100%)">
        <div class="relative z-10">
          <Stats client:load />
          <!-- <Features /> -->
          <TabServices client:load />
          <ATMShowcase />
        </div>
      </div>
      <!-- Cool moving background wrapper for lower sections -->
      <div class="relative" style="background: linear-gradient(to bottom, white 0%, #f8fbff 15%, #f0f7ff 50%, #f8fbff 85%, white 100%)">
        <!-- Animated cool background layers - contained within bounds -->
        <div class="absolute inset-0 overflow-hidden">
          <div class="absolute inset-8 opacity-85">
            <div class="absolute inset-0 animate-float-cool-slow" style="background: radial-gradient(ellipse 700px 450px at 30% 30%, rgba(100, 150, 255, 0.5) 0%, rgba(120, 170, 255, 0.25) 40%, transparent 70%)"></div>
            <div class="absolute inset-0 animate-float-cool-slower" style="background: radial-gradient(ellipse 600px 400px at 70% 70%, rgba(120, 200, 180, 0.45) 0%, rgba(140, 220, 200, 0.2) 35%, transparent 65%); animation-delay: 4s"></div>
            <div class="absolute inset-0 animate-float-cool-slowest" style="background: radial-gradient(ellipse 800px 350px at 50% 60%, rgba(150, 220, 255, 0.4) 0%, rgba(170, 235, 255, 0.18) 50%, transparent 80%); animation-delay: 7s"></div>
          </div>
        </div>
        <div class="relative z-10">
          <!-- <FundingMethods /> -->
          <!-- <TrustPlatform /> -->
          <Support />
          <Testimonials />
          <Insights />
          <NewsletterCTA />
          <FAQ client:load />
          <CTA />
        </div>
      </div>
    </main>
    <Footer />
  </div>
</BaseLayout>
